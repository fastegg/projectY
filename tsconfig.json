{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "sourceMap": true,
    "mapRoot": "dist",
    "alwaysStrict": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "*": ["typings/*", "./*"]
    }
  },
  "include": [
    "server/**/*",
    "client/**/*",
    "common/**/*",
    "./json"
  ],
  "exclude": [
    "node_modules",
    "dist/**/*"
  ]
}